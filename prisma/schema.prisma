generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum DeliveryLocation {
  Lima
  Provincia
  Null
}

model User {
  id               Int              @id @default(autoincrement())
  email            String           @unique
  name             String?
  deliveryLocation DeliveryLocation @default(Null)

  // si es Lima
  location Json?
  address  String?

  // si es Provincia
  agencia    String?
  dni        String?
  phone      String?
  department String?
}

model Agencia {
  id             Int      @id @default(autoincrement())
  agencias       String[]
  minimoDelivery Int      @default(10)
  maximoDelivery Int      @default(15)
}

model Coleccion {
  id    Int    @id @default(autoincrement())
  name  String
  price Float
  image String
}

model Cupon {
  id           Int     @id @default(autoincrement())
  codigoCupon  String  @default("qwer")
  mostrarCupon Boolean @default(false)
}

model Fotos {
  id              Int    @id @default(autoincrement())
  imagenIzquierda String
  imagenDerecha   String
  fotoTienda      String
}

model Productos {
  id       Int     @id @default(autoincrement())
  name     String
  category String
  estado   String
  size     String
  price    Float
  image    String
  image2   String?
  stock    Int     @default(0)

  destacados ProductosDestacados[] // lado inverso
}

model ProductosDestacados {
  id         Int       @id @default(autoincrement())
  producto   Productos @relation(fields: [productoId], references: [id], onDelete: Cascade)
  productoId Int       @unique // âœ… evita duplicados
}
